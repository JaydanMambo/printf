#include "main.h"
#include <stdio.h>
#include <stdarg.h>
#include <unistd.h>

/**
 * _printf - Custom printf function
 * @format: The format string.
 * @...: Variable number of arguments.
 *
 * Return: The number of characters printed.
 */
int _printf(const char *format, ...)
{
    if (format == NULL)
        return -1;

    va_list args;
    va_start(args, format);

    int count = 0;

    while (*format)
    {
        if (*format != '%')
            count += write(1, format++, 1);
        else
        {
            format++;
            if (*format == 'c')
                count += write(1, &(va_arg(args, int)), 1);
            else if (*format == 's')
                for (const char *str = va_arg(args, const char*); *str; count += write(1, str++, 1)) {}
            else if (*format == '%')
                count += write(1, "%%", 1);
        }
    }

    va_end(args);
    return count;
}
